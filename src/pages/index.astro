---
// src/pages/index.astro - Home Page
import Layout from '../layouts/Layout.astro';
---

<Layout title="Spanish Property Calculator - Should You Rent or Buy?">
  <main class="home">
    <section class="hero">
      <div class="hero-content">
        <h1>Spanish Property Calculator</h1>
        <p class="subtitle">Make the right decision: Should you rent or buy property in Spain?</p>
        
        <div class="hero-image">
          <img src="/Madrid.jpg" alt="Beautiful view of Madrid skyline" />
        </div>
        
        <a href="/calculator" class="cta-button">Start Calculator</a>
      </div>
    </section>

    <section class="features">
      <div class="features-container">
        <div class="feature">
          <div class="feature-icon">🏠</div>
          <h3>Property Analysis</h3>
          <p>Comprehensive analysis including Spanish taxes, legal fees, and hidden costs often overlooked by buyers.</p>
        </div>
        
        <div class="feature">
          <div class="feature-icon">💰</div>
          <h3>Financial Planning</h3>
          <p>Calculate mortgage costs, down payments, and compare total cost of ownership versus renting.</p>
        </div>
        
        <div class="feature">
          <div class="feature-icon">📊</div>
          <h3>Smart Recommendations</h3>
          <p>Get personalized advice based on your financial situation and property preferences in Spain.</p>
        </div>
      </div>
    </section>
  </main>
</Layout>
